x)\r\n        dom.scrollToElement(this.$el('city-index-' + e.target.attr.index))\r\n     \r\n      }\r\n    },\r\n    data: {\r\n      height: 800,\r\n      list: [\r\n            {\r\n                index: 'A',\r\n                list: [\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                ]\r\n            },\r\n            {\r\n                index: 'B',\r\n                list: [\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                    {\r\n                        id: 1,\r\n                        title: '安溪',\r\n                    },\r\n                  